    border: none;
    color: white;
  }

  .btn-admin-login:hover {
    box-shadow: 0 10px 15px rgba(217, 70, 239, 0.4);
    transform: translateY(-3px);
  }

  /* View Feedback Button */
  .btn-view-feedback {
    background: linear-gradient(135deg, #4f46e5, #3b82f6);
    border: none;
    color: white;
    width: 200px;
  }

  .btn-view-feedback:hover {
    box-shadow: 0 10px 15px rgba(79, 70, 229, 0.4);
    transform: translateY(-3px);
  }

  /* Button hover effect */
  .action-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: all 0.5s ease;
    z-index: -1;
  }

  .action-btn:hover::before {
    left: 100%;
  }

  /* Dark Mode Toggle Button */
  .dark-mode-toggle-container {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 1000;
  }

  .dark-mode-toggle {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    margin-top: 2.4rem;
    transition: all 0.3s ease;
    background-color: #f8f9fa;
    color: #4f46e5;
    border: 2px solid rgba(79, 70, 229, 0.2);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .dark-mode-toggle:hover {
    transform: rotate(15deg);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  /* Dark Mode Styles */
  body.dark-mode {
    background-color: #121212;
    color: #e0e0e0;
  }

  body.dark-mode .welcome-card {
    background-color: #1e1e1e;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }

  body.dark-mode .welcome-title {
    background: linear-gradient(45deg, #8b5cf6, #d946ef);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  body.dark-mode .lead {
    color: #9ca3af;
  }

  body.dark-mode hr.divider {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(139, 92, 246, 0.5),
      transparent
    );
  }

  body.dark-mode .dark-mode-toggle {
    background-color: #2d3748;
    color: #ffc107;
    border: 2px solid rgba(255, 193, 7, 0.2);
  }

  /* Decorative elements */
  .decorative-shape {
    position: absolute;
    border-radius: 50%;
    filter: blur(70px);
    z-index: -1;
    opacity: 0.5;
  }

  .shape-1 {
    width: 300px;
    height: 300px;
    top: -100px;
    left: -100px;
    background: radial-gradient(
      circle,
      rgba(79, 70, 229, 0.4) 0%,
      rgba(79, 70, 229, 0) 70%
    );
  }

  .shape-2 {
    width: 250px;
    height: 250px;
    bottom: -50px;
    right: -50px;
    background: radial-gradient(
      circle,
      rgba(139, 92, 246, 0.4) 0%,
      rgba(139, 92, 246, 0) 70%
    );
  }

  body.dark-mode .shape-1 {
    background: radial-gradient(
      circle,
      rgba(139, 92, 246, 0.3) 0%,
      rgba(139, 92, 246, 0) 70%
    );
  }

  body.dark-mode .shape-2 {
    background: radial-gradient(
      circle,
      rgba(217, 70, 239, 0.3) 0%,
      rgba(217, 70, 239, 0) 70%
    );
  }

  /* Logo Animation */
  .logo-container {
    margin-bottom: 2rem;
  }

  .feedback-logo {
    font-size: 3rem;
    animation: pulse 2s infinite alternate ease-in-out;
    color: #4f46e5;
  }

  @keyframes pulse {
