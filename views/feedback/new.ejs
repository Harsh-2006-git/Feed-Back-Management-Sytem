<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card shadow">
      <div class="card-body">
        <h1 class="text-center mb-4">New Feedback</h1>
        <form action="/feedback" method="POST" novalidate>
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input
              class="form-control"
              type="text"
              id="title"
              name="feedback[title]"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
              class="form-control"
              id="description"
              name="feedback[description]"
              rows="5"
              required
            ></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label" for="rating">Rating (1-5)</label>
            <input
              class="form-control"
              type="number"
              id="rating"
              name="feedback[rating]"
              min="1"
              max="5"
              required
            />
          </div>
          <div class="d-grid">
            <button class="btn btn-success">Submit Feedback</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
