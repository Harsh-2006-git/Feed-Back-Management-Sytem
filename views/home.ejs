  }

  .welcome-card.show {
    transform: translateY(0);
    opacity: 1;
  }

  .card-body {
    padding: 3rem 2rem;
  }

  .welcome-title {
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(45deg, #4f46e5, #9333ea);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.5px;
  }

  .lead {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    color: #6b7280;
    font-weight: 400;
  }

  hr.divider {
    height: 3px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(79, 70, 229, 0.5),
      transparent
    );
    border: none;
    margin: 2rem auto;
    width: 50%;
    opacity: 0.5;
  }

  /* Button Styles */
  .btn-container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 2rem;
  }

  .action-btn {
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1;
    opacity: 0;
    transform: translateY(20px);
  }

  .action-btn.show {
    opacity: 1;
    transform: translateY(0);
  }

  /* User Login Button */
